<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <GridView
            android:id="@+id/search_detail_gift_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/six_dp"
            android:layout_marginRight="@dimen/six_dp"
            android:columnWidth="@dimen/ninty_dp"
            android:horizontalSpacing="@dimen/six_dp"
            android:numColumns="2"
            android:scrollbars="none"
            android:stretchMode="columnWidth" />

        <TextView
            android:id="@+id/search_detail_gift_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/none_gift"
            android:textSize="@dimen/fifteen_sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>