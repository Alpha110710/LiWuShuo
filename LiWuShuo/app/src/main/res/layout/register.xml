<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/register_back_img"
        android:layout_width="@dimen/fifty_dp"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginLeft="@dimen/twelve_dp"
        android:layout_marginTop="@dimen/seven_dp"
        android:src="@mipmap/abc_ic_clear_search_api_disabled_holo_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/register_phone_img"
            android:layout_width="@dimen/twelve_dp"
            android:layout_height="@dimen/twelve_dp"
            android:layout_marginLeft="@dimen/forty_dp"
            android:layout_marginTop="@dimen/seventy_dp"
            android:src="@mipmap/icon_cellphone" />

        <EditText
            android:id="@+id/register_teltnum_et"
            android:layout_width="@dimen/two_hundred_seventy_dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginTop="@dimen/fifty_eight_dp"
            android:hint="@string/teleNum"
            android:paddingBottom="@dimen/twenty_dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/register_password_et"
                android:layout_width="@dimen/two_hundred_seventy_dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/seventy_dp"
                android:hint="@string/password_"
                android:password="true"
                android:paddingBottom="@dimen/twenty_dp" />

            <ImageView
                android:id="@+id/register_password_img"
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_marginLeft="@dimen/forty_dp"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:src="@mipmap/icon_password" />

            <ImageView
                android:id="@+id/register_message_img"
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_marginLeft="@dimen/forty_dp"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:src="@mipmap/icon_login_message"
                android:visibility="gone"/>

            <Button
                android:id="@+id/register_getcode"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/forty_dp"
                android:layout_alignRight="@id/register_password_et"
                android:text="@string/get_password"
                android:textColor="@color/colorWhite"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/register_button"
        android:layout_width="@dimen/two_hundred_ninty_dp"
        android:layout_height="@dimen/thirty_eight_dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/forty_dp"
        android:background="@drawable/register"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/fifteen_sp" />

    <CheckBox
        android:id="@+id/register_select_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/fifty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:button="@null"
        android:text="@string/register_new"
        android:textColor="@color/colorRadioButtonDeepPink" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/ninty_dp"
            android:layout_height="@dimen/one_dp"
            android:layout_marginLeft="@dimen/thirty_dp"
            android:layout_marginTop="@dimen/one_hundred_ten_dp"
            android:background="@color/colcorRadioButtonDeepgrey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginTop="@dimen/one_hundred_dp"
            android:text="@string/regis_another" />

        <TextView
            android:layout_width="@dimen/ninty_dp"
            android:layout_height="@dimen/one_dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginTop="@dimen/one_hundred_ten_dp"
            android:background="@color/colcorRadioButtonDeepgrey"
            android:gravity="right" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/register_wechat_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_log_wechat" />

        <ImageView
            android:id="@+id/register_sina_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/fifty_dp"
            android:layout_toLeftOf="@id/register_wechat_img"
            android:src="@mipmap/icon_log_sina" />

        <ImageView
            android:id="@+id/register_qq_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fifty_dp"
            android:layout_toRightOf="@id/register_wechat_img"
            android:src="@mipmap/icon_log_qq" />

    </RelativeLayout>


</LinearLayout>