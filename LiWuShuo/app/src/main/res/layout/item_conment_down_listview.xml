<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_conment_down_listview_head_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/me_avatar_girl" />

        <LinearLayout
            android:id="@+id/item_conment_down_listview_llyout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/item_conment_down_listview_head_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_conment_down_listview_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="我的世界"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/item_conment_down_listview_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="14小时前, 06:24"
                android:textSize="10sp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/item_conment_down_listview_praise_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="17dp"
            android:button="@null"
            android:drawableLeft="@drawable/selector_conment_praise" />

        <TextView
            android:id="@+id/item_conment_down_listview_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_conment_down_listview_llyout"
            android:layout_alignRight="@id/item_conment_down_listview_praise_cb"
            android:layout_below="@id/item_conment_down_listview_head_img"
            android:layout_marginTop="8dp"
            android:lineSpacingMultiplier="1.3"
            android:text="hi地方好地方都是封ID噢覅爽肤水封ID搜谱封IP手动封ID搜谱付给id人搜图二恶王瑞否迪欧腹地" />
    </RelativeLayout>


</RelativeLayout>