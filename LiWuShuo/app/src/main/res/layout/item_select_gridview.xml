<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:background="@drawable/item_gridview_round"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/item_select_gridview_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@mipmap/ic_about" />

    <TextView
        android:id="@+id/item_select_gridview_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="12dp"
        android:text="520必备味蕾之诗.最萌吃货进口零食礼盒" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_select_gridview_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="89.00"
            android:textSize="15sp"
            android:textColor="@color/colorRadioButtonDeepPink" />

        <TextView
            android:id="@+id/item_select_gridview_support_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="13606"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/item_select_gridview_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/item_select_gridview_support_tv"
            android:src="@mipmap/ic_small_heart_normal" />

    </RelativeLayout>
    </LinearLayout>

</LinearLayout>