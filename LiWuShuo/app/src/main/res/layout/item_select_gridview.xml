<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/eight_dp"
        android:elevation="@dimen/one_dp"
        app:cardCornerRadius="@dimen/six_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_select_gridview_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_hundred_fifty_dp"
                android:src="@mipmap/ic_about" />

            <TextView
                android:id="@+id/item_select_gridview_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_dp"
                android:layout_marginTop="@dimen/twelve_dp"
                android:lines="2"
                android:textColor="@color/colorBlack"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/six_dp">

                <TextView
                    android:id="@+id/item_select_gridview_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/eight_dp"
                    android:textColor="@color/colorRadioButtonDeepPink"
                    android:textSize="@dimen/fifteen_sp" />

                <TextView
                    android:id="@+id/item_select_gridview_support_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:textSize="@dimen/fifteen_sp" />

                <ImageView
                    android:id="@+id/item_select_gridview_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_toLeftOf="@id/item_select_gridview_support_tv"
                    android:src="@mipmap/ic_small_heart_normal" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>