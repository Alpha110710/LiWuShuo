<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_conment_down_listview_head_img"
            android:layout_width="@dimen/forty_dp"
            android:layout_height="@dimen/forty_dp"
            android:layout_marginLeft="@dimen/eight_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:src="@mipmap/me_avatar_girl" />

        <LinearLayout
            android:id="@+id/item_conment_down_listview_llyout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/eighteen_dp"
            android:layout_toRightOf="@id/item_conment_down_listview_head_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_conment_down_listview_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/thirteen_dp"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/item_conment_down_listview_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:textSize="@dimen/ten_sp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/item_conment_down_listview_praise_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="17dp"
            android:button="@null"
            android:drawableLeft="@drawable/selector_conment_praise"
            android:drawablePadding="5dp" />

        <TextView
            android:id="@+id/item_conment_down_listview_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_conment_down_listview_llyout"
            android:layout_alignRight="@id/item_conment_down_listview_praise_cb"
            android:layout_below="@id/item_conment_down_listview_head_img"
            android:layout_marginTop="8dp"
            android:lineSpacingMultiplier="1.3" />

        <TextView
            android:id="@+id/item_conment_down_listview_line_tv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@id/item_conment_down_listview_content_tv"
            android:layout_below="@id/item_conment_down_listview_content_tv"
            android:layout_marginTop="15dp"
            android:background="@color/colcorRadioButtonLightgrey" />
    </RelativeLayout>


</RelativeLayout>