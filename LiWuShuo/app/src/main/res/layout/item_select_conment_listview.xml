<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_select_conment_listview_head_img"
            android:layout_width="@dimen/forty_dp"
            android:layout_height="@dimen/forty_dp"
            android:layout_marginLeft="@dimen/eight_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:src="@mipmap/me_avatar_girl" />

        <RelativeLayout
            android:id="@+id/item_select_conment_listview_rlyout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/eight_dp"
            android:layout_toRightOf="@id/item_select_conment_listview_head_img">

            <TextView
                android:id="@+id/item_select_conment_listview_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/thirteen_dp"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/item_select_conment_listview_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_marginTop="@dimen/twelve_dp"
                android:textSize="@dimen/ten_sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/item_select_conment_listview_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_select_conment_listview_rlyout"
            android:layout_alignRight="@id/item_conment_down_listview_praise_cb"
            android:layout_below="@id/item_select_conment_listview_head_img"
            android:lineSpacingMultiplier="1.3"/>

        <TextView
            android:id="@+id/item_select_conment_listview_line_tv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@id/item_select_conment_listview_content_tv"
            android:layout_below="@id/item_select_conment_listview_content_tv"
            android:layout_marginTop="@dimen/eight_dp"
            android:background="@color/colcorRadioButtonLightgrey" />
    </RelativeLayout>


</RelativeLayout>