<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/category_raiders_topic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:text="@string/topic"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/twenty_sp" />

        <TextView
            android:id="@+id/category_raiders_lookall_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/category_raiders_topic_tv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/twenty_dp"
            android:text="@string/look_all"
            android:textSize="@dimen/fifteen_sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/category_raiders_topic_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fifty_dp" />

</LinearLayout>