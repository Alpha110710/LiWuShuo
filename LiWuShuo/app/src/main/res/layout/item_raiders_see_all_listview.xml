<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_raiders_listview_see_all_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_fifty_dp"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginRight="@dimen/five_dp"
        android:layout_marginTop="@dimen/ten_dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_fifty_dp"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginRight="@dimen/five_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:background="@drawable/round_transparent_black">

        <LinearLayout
            android:id="@+id/item_raiders_listview_see_all_tv_llyout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/forty_dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_raiders_listview_see_all_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/twenty_two_sp" />

            <TextView
                android:id="@+id/item_raiders_listview_see_all_point_nine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/twelve_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@drawable/ig_topic_horizontal_rule" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_raiders_listview_see_all_title_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_raiders_listview_see_all_tv_llyout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/five_dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/seventeen_sp" />
    </RelativeLayout>


</RelativeLayout>