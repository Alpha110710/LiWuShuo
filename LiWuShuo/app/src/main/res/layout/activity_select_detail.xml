<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:background="@color/colorRadioButtonDeepPink">

        <ImageView
            android:id="@+id/select_detail_back_img"
            android:layout_width="@dimen/twenty_two_dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twelve_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:src="@mipmap/ic_action_back" />

        <TextView
            android:id="@+id/select_detail_bar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/baby_detail"
            android:textColor="@color/colorWhite"
            android:maxWidth="@dimen/one_hundred_seventy_dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/twenty_sp" />


        <ImageView
            android:id="@+id/select_detail_share_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_marginTop="@dimen/twelve_dp"
            android:src="@mipmap/baichuan_btn_share" />

        <ImageView
            android:id="@+id/select_detail_comments_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:layout_marginTop="@dimen/thirteen_dp"
            android:layout_toLeftOf="@id/select_detail_share_img"
            android:src="@mipmap/baichuan_btn_comments" />

        <CheckBox
            android:id="@+id/select_detail_favorites_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/eighteen_dp"
            android:layout_marginTop="@dimen/thirteen_dp"
            android:layout_toLeftOf="@id/select_detail_comments_img"
            android:background="@drawable/selector_select_detail_like"
            android:button="@null" />
    </RelativeLayout>
    <WebView
        android:id="@+id/select_detail_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>